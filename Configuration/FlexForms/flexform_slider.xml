<T2DataStructure>
    <sheets>
        <slider>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Slideshow</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.slider.uid>
                        <TCEforms>
                            <label>Slider wählen</label>
                            <config>
                                <type>select</type>
                                <maxitems>1</maxitems>
                                <size>6</size>
                                <foreign_table>tx_sglayerslider_domain_model_slider</foreign_table>
                            </config>
                        </TCEforms>
                    </settings.slider.uid>
                    <settings.slider.autostart>
                        <TCEforms>
                            <label>Autostart</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.slider.autostart>
                    <settings.slider.pauseOnHover>
                        <TCEforms>
                            <label>Pause bei Hover</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.slider.pauseOnHover>
                    <settings.slider.firstSlide>
                        <TCEforms>
                            <label>Erste Layer zufällig</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.slider.firstSlide>
                    <settings.slider.animateFirstSlide>
                        <TCEforms>
                            <label>Erster Layer animiert</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.slider.animateFirstSlide>
                    <settings.slider.loops>
                        <TCEforms>
                            <label>Anzahl Durchläufe</label>
                            <config>
                                <type>input</type>
                                <size>6</size>
                            </config>
                        </TCEforms>
                    </settings.slider.loops>
                    <settings.slider.forceLoopNum>
                        <TCEforms>
                            <label>Durchläufe begrenzen</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.slider.forceLoopNum>
                    <settings.slider.towWaySlideshow>
                        <TCEforms>
                            <label>Bidirektional</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.slider.towWaySlideshow>
                    <settings.slider.randomSlideshow>
                        <TCEforms>
                            <label>Zufällige Reihenfolge</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.slider.randomSlideshow>
                </el>
            </ROOT>
        </slider>
        <layout>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Layout</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.layout.width>
                        <TCEforms>
                            <label>Breite (px/%)</label>
                            <config>
                                <type>input</type>
                                <size>6</size>
                            </config>
                        </TCEforms>
                    </settings.layout.width>
                    <settings.layout.height>
                        <TCEforms>
                            <label>Höhe (px/%)</label>
                            <config>
                                <type>input</type>
                                <size>6</size>
                            </config>
                        </TCEforms>
                    </settings.layout.height>
                    <settings.layout.responsive>
                        <TCEforms>
                            <label>Responsive</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.layout.responsive>
                    <settings.layout.responsiveUnder>
                        <TCEforms>
                            <label>Responsive unter (px)</label>
                            <config>
                                <type>input</type>
                                <size>6</size>
                            </config>
                        </TCEforms>
                    </settings.layout.responsiveUnder>
                    <settings.layout.layersContainer>
                        <TCEforms>
                            <label>Container für Layer (0=off)</label>
                            <config>
                                <type>input</type>
                                <size>6</size>
                            </config>
                        </TCEforms>
                    </settings.layout.layersContainer>
                    <settings.layout.cssclass>
                        <TCEforms>
                            <label>CSS-Klasse</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.layout.cssclass>
                </el>
            </ROOT>
        </layout>
        <appearence>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Darstellung</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.appearence.globalBGColor>
                        <TCEforms>
                            <label>Globale Hintergrundfarbe (rrggbb)</label>
                            <config>
                                <type>input</type>
                                <size>6</size>
                            </config>
                        </TCEforms>
                    </settings.appearence.globalBGColor>
                    <settings.appearence.globalBGImage>
                        <TCEforms>
                            <label>Globales Hintergrundbild</label>
                            <config>
                                <type>group</type>
                                <internal_type>file</internal_type>
                                <allowed>gif, jpg,jpeg,png</allowed>
                                <max_size>10000</max_size>
                                <uploadfolder>uploads/tx_sglayerslider</uploadfolder>
                                <maxitems>1</maxitems>
                                <size>1</size>
                                <show_thumbs>1</show_thumbs>
                                <selectedliststyle>Width:180px</selectedliststyle>
                            </config>
                        </TCEforms>
                    </settings.appearence.globalBGImage>
                    <settings.appearence.skin>
                        <TCEforms>
                            <label>Container Skin</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.appearence.skin>
                    <settings.appearence.skinpath>
                        <TCEforms>
                            <label>Skin-Pfad</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.appearence.skinpath>
                </el>
            </ROOT>
        </appearence>
        <navigation>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Navigation</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.navigation.navPrevNext>
                        <TCEforms>
                            <label>Vorwärts-Rückwärts Buttons anzeigen</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.navPrevNext>
                    <settings.navigation.navStartStop>
                        <TCEforms>
                            <label>Start-Stop Buttons anzeigen</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.navStartStop>
                    <settings.navigation.navButtons>
                        <TCEforms>
                            <label>Navigations-Buttons anzeigen</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.navButtons>
                    <settings.navigation.hoverPrevNext>
                        <TCEforms>
                            <label>Hover auf Vorwärts-Rückwärts Buttons</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.hoverPrevNext>
                    <settings.navigation.hoverBottomNav>
                        <TCEforms>
                            <label>Hover auf Fuss-Navigation</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.hoverBottomNav>
                    <settings.navigation.keybNav>
                        <TCEforms>
                            <label>Navigation per Tastatur aktivieren</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.keybNav>
                    <settings.navigation.touchNav>
                        <TCEforms>
                            <label>Touch-Navigation aktivieren</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.touchNav>
                    <settings.navigation.showBarTimer>
                        <TCEforms>
                            <label>Fortschritts-Balken anzeigen</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.showBarTimer>
                    <settings.navigation.showCircleTimer>
                        <TCEforms>
                            <label>Fortschritts-Zirkel anzeigen</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.showCircleTimer>
                    <settings.navigation.thumbnailNavigation>
                        <TCEforms>
                            <label>Thumbnail-Navigation aktivieren</label>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">deaktiviert</numIndex>
                                        <numIndex index="1">deaktiviert</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">hover</numIndex>
                                        <numIndex index="1">hover</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">aktiviert</numIndex>
                                        <numIndex index="1">aktiviert</numIndex>
                                    </numIndex>
                                </items>
                                <maxitems>1</maxitems>
                                <size>1</size>
                            </config>
                        </TCEforms>
                    </settings.navigation.thumbnailNavigation>nailNavigation>
                    <settings.navigation.tnContainerWidth>
                        <TCEforms>
                            <label>Breite des Thumnail-Containers (%)</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.tnContainerWidth>
                    <settings.navigation.tnWidth>
                        <TCEforms>
                            <label>Thumbnail Breite (px)</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.tnWidth>
                    <settings.navigation.tnHeight>
                        <TCEforms>
                            <label>Tumbnail Höhe (px)</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.tnHeight>
                    <settings.navigation.tnActiveOpacity>
                        <TCEforms>
                            <label>Thumbnail Transparenz aktiv</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.tnActiveOpacity>
                    <settings.navigation.tnInactiveOpacity>
                        <TCEforms>
                            <label>Thumbnail Transparenz inaktiv</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.navigation.tnInactiveOpacity>
                </el>
            </ROOT>
        </navigation>
        <video>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Video</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.video.autoPlayVideo>
                        <TCEforms>
                            <label>Video autoplay</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.video.autoPlayVideo>
                    <settings.video.autoPauseSlidshow>
                        <TCEforms>
                            <label>Slideshow-Pause während Video</label>
                            <config>
                                <type>select</type>
                                <items type="array">
                                <numIndex index="0" type="array">
                                        <numIndex index="0">deaktiviert</numIndex>
                                        <numIndex index="1">deaktiviert</numIndex>
                                    </numIndex>
                                <numIndex index="1" type="array">
                                    <numIndex index="0">auto</numIndex>
                                    <numIndex index="1">auto</numIndex>
                                </numIndex>
                                <numIndex index="2" type="array">
                                    <numIndex index="0">aktiviert</numIndex>
                                    <numIndex index="1">aktiviert</numIndex>
                                </numIndex>
                            </items>
                            <maxitems>1</maxitems>
                            <size>1</size>
                        </config>
                        </TCEforms>
                    </settings.video.autoPauseSlidshow>
                    <settings.video.youtubePreview>
                        <TCEforms>
                            <label>Video Preview</label>
                            <config>
                         <type>select</type>
                        <items type="array">
                            <numIndex index="0" type="array">
                                <numIndex index="0">default</numIndex>
                                <numIndex index="1">default</numIndex>
                            </numIndex>
                            <numIndex index="1" type="array">
                                <numIndex index="0">Medium Quality</numIndex>
                                <numIndex index="1">Medium Quality</numIndex>
                            </numIndex>
                            <numIndex index="2" type="array">
                                <numIndex index="0">High Quality</numIndex>
                                <numIndex index="1">High Quality</numIndex>
                            </numIndex>
                            <numIndex index="3" type="array">
                                <numIndex index="0">Max Quality</numIndex>
                                <numIndex index="1">Max Quality</numIndex>
                            </numIndex>
                        </items>
                        <maxitems>1</maxitems>
                        <size>1</size>
                            </config>
                        </TCEforms>
                    </settings.video.youtubePreview>
                </el>
            </ROOT>
        </video>
        <image>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Images</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.image.imgPreload>
                        <TCEforms>
                            <label>Images vorladen</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.image.imgPreload>
                    <settings.image.lazyLoad>
                        <TCEforms>
                            <label>Images nur bei Bedarf laden</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.image.lazyLoad>
                </el>
            </ROOT>
        </image>
        <logo>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Logo</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.logo.yourLogo>
                        <TCEforms>
                            <label>Logo</label>
                        <config>
                            <type>group</type>
                            <internal_type>file</internal_type>
                            <allowed>gif, jpg,jpeg,png</allowed>
                            <max_size>10000</max_size>
                            <uploadfolder>uploads/tx_sglayerslider</uploadfolder>
                            <maxitems>1</maxitems>
                            <size>1</size>
                            <show_thumbs>1</show_thumbs>
                            <selectedliststyle>Width:180px</selectedliststyle>
                        </config>
                        </TCEforms>
                    </settings.logo.yourLogo>
                    <settings.logo.yourLogoStyle>
                        <TCEforms>
                            <label>Logo Style</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.logo.yourLogoStyle>
                    <settings.logo.yourLogoLink>
                        <TCEforms>
                            <label>Logo Link</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.logo.yourLogoLink>
                    <settings.logo.yourLogoTarget>
                        <TCEforms>
                            <label>Link-Target</label>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">self</numIndex>
                                        <numIndex index="1">self</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">_blank</numIndex>
                                        <numIndex index="1">_blank</numIndex>
                                    </numIndex>
                                </items>
                                <maxitems>1</maxitems>
                                <size>1</size>
                            </config>
                        </TCEforms>
                    </settings.logo.yourLogoTarget>
                </el>
            </ROOT>
        </logo>
    </sheets>
</T2DataStructure>